{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${cwd}"
        },
        {
            "name": "Launch Main",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/src/Main.PS1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Pester Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/test/runners/Invoke-PesterTests.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Mock process Execution",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/src/Invoke-FocusGameDeck.ps1",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "args": [
                "mock-calc"
            ]
        },
        {
            "name": "Build Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/build-tools/Release-Manager.ps1",
            "args": [
                "-Development",
                "-Verbose"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
