{
    "codeSigningSettings": {
        "enabled": false,
        "certificateThumbprint": "",
        "certificateStorePath": "Cert:/CurrentUser/My",
        "timestampServer": "http://timestamp.digicert.com",
        "hashAlgorithm": "SHA256",
        "description": "Focus Game Deck - Gaming Environment Optimization Tool",
        "descriptionUrl": "https://github.com/beive60/focus-game-deck",
        "notes": {
            "setup": [
                "1. Obtain an Organization Validation (OV) certificate from a trusted CA",
                "2. Install certificate in Windows Certificate Store",
                "3. Update 'certificateThumbprint' with your certificate's thumbprint",
                "4. Set 'enabled' to true to enable code signing",
                "5. Run build script with signing enabled"
            ],
            "certificateRequirements": {
                "type": "Organization Validation (OV) Code Signing Certificate",
                "recommendedProviders": [
                    "DigiCert",
                    "Sectigo (formerly Comodo)",
                    "GlobalSign",
                    "Entrust"
                ],
                "keyUsage": "Digital Signature, Key Encipherment",
                "extendedKeyUsage": "Code Signing"
            },
            "timestampServers": {
                "primary": "http://timestamp.digicert.com",
                "alternatives": [
                    "http://timestamp.sectigo.com",
                    "http://timestamp.globalsign.com/?signature=sha2",
                    "http://timestamp.entrust.net/TSS/RFC3161sha2TS"
                ]
            }
        }
    },
    "buildSettings": {
        "outputDirectory": "build",
        "signedDirectory": "signed",
        "createDistribution": true,
        "includeSourceCode": false,
        "compressionLevel": "Optimal"
    }
}
