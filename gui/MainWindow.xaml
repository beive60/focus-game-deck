                                Foreground="White"
                                BorderThickness="0"/>
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem
                    x:Name="GlobalSettingsTab"
                    Header="[GLOBAL_SETTINGS_TAB_HEADER]">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer
                            Grid.Row="0"
                            VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20">

                                <GroupBox
                                    x:Name="GeneralSettingsGroup"
                                    Header="[GENERAL_SETTINGS_GROUP]"
                                    Margin="0,0,0,20">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Label
                                            x:Name="LanguageLabel"
                                            Content="[LANGUAGE_LABEL]"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"/>
                                        <ComboBox
                                            x:Name="LanguageCombo"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Width="200"
                                            HorizontalAlignment="Left"
                                            Margin="5"/>

                                        <Label
                                            x:Name="LauncherTypeLabel"
                                            Content="[LAUNCHER_TYPE_LABEL]"
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"/>
                                        <ComboBox
                                            x:Name="LauncherTypeCombo"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Width="200"
                                            HorizontalAlignment="Left"
                                            Margin="5">
                                            <ComboBoxItem
                                                x:Name="LauncherTypeEnhancedItem"
                                                Content="[ENHANCED_SHORTCUTS]"
                                                Tag="lnk"
                                                IsSelected="True"/>
                                            <ComboBoxItem
                                                x:Name="LauncherTypeTraditionalItem"
                                                Content="[TRADITIONAL_BATCH]"
                                                Tag="bat"/>
                                        </ComboBox>

                                        <Label
                                            x:Name="LogRetentionLabel"
                                            Content="[LOG_RETENTION_LABEL]"
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"/>
                                        <ComboBox
                                            x:Name="LogRetentionCombo"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Width="200"
                                            HorizontalAlignment="Left"
                                            Margin="5">
                                            <ComboBoxItem
                                                x:Name="LogRetention7Item"
                                                Content="[LOG_RETENTION_7]"
                                                Tag="7"/>
                                            <ComboBoxItem
                                                x:Name="LogRetention30Item"
                                                Content="[LOG_RETENTION_30]"
                                                Tag="30"
                                                IsSelected="True"/>
                                            <ComboBoxItem
                                                x:Name="LogRetention180Item"
                                                Content="[LOG_RETENTION_180]"
                                                Tag="180"/>
                                            <ComboBoxItem
                                                x:Name="LogRetentionUnlimitedItem"
                                                Content="[LOG_RETENTION_UNLIMITED]"
                                                Tag="-1"/>
                                        </ComboBox>

                                        <CheckBox
                                            x:Name="EnableLogNotarizationCheckBox"
                                            Content="[ENABLE_LOG_NOTARIZATION]"
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            VerticalAlignment="Center"
                                            Margin="5"/>

                                        <TextBlock
                                            x:Name="LauncherHelpText"
                                            Text="[LAUNCHER_HELP_TEXT]"
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            TextWrapping="Wrap"
                                            FontSize="11"
                                            Foreground="#666"
                                            Margin="5,5,0,0"/>
                                    </Grid>
                                </GroupBox>

                                <GroupBox
                                    x:Name="PathSettingsGroup"
                                    Header="[PATH_SETTINGS_GROUP]">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="25"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="35"/>
                                        </Grid.RowDefinitions>

                                        <Label
                                            x:Name="SteamPathLabel"
                                            Content="[STEAM_PATH_LABEL]"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"/>
                                        <TextBox
                                            x:Name="SteamPathTextBox"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            Margin="5"/>
                                        <Button
                                            x:Name="BrowseSteamPathButton"
                                            Content="[BROWSE_BUTTON]"
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Width="70"
                                            Height="25"/>
                                        <Button
                                            x:Name="AutoDetectSteamButton"
                                            Content="[AUTO_DETECT_BUTTON]"
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            Width="70"
                                            Height="25"
                                            Margin="5,0,0,0"/>
                                        <TextBlock
                                            x:Name="AutoDetectSteamTooltip"
                                            Text="?"
                                            Grid.Row="0"
                                            Grid.Column="4"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[AUTO_DETECT_STEAM_TOOLTIP]"/>

                                        <Label
                                            x:Name="EpicPathLabel"
                                            Content="[EPIC_PATH_LABEL]"
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"/>
                                        <TextBox
                                            x:Name="EpicPathTextBox"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            Margin="5"/>
                                        <Button
                                            x:Name="BrowseEpicPathButton"
                                            Content="[BROWSE_BUTTON]"
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Width="70"
                                            Height="25"/>
                                        <Button
                                            x:Name="AutoDetectEpicButton"
                                            Content="[AUTO_DETECT_BUTTON]"
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            Width="70"
                                            Height="25"
                                            Margin="5,0,0,0"/>
                                        <TextBlock
                                            x:Name="AutoDetectEpicTooltip"
                                            Text="?"
                                            Grid.Row="1"
                                            Grid.Column="4"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[AUTO_DETECT_EPIC_TOOLTIP]"/>

                                        <Label
                                            x:Name="RiotPathLabel"
                                            Content="[RIOT_PATH_LABEL]"
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"/>
                                        <TextBox
                                            x:Name="RiotPathTextBox"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            Margin="5"/>
                                        <Button
                                            x:Name="BrowseRiotPathButton"
                                            Content="[BROWSE_BUTTON]"
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Width="70"
                                            Height="25"/>
                                        <Button
                                            x:Name="AutoDetectRiotButton"
                                            Content="[AUTO_DETECT_BUTTON]"
                                            Grid.Row="2"
                                            Grid.Column="3"
                                            Width="70"
                                            Height="25"
                                            Margin="5,0,0,0"/>
                                        <TextBlock
                                            x:Name="AutoDetectRiotTooltip"
                                            Text="?"
                                            Grid.Row="2"
                                            Grid.Column="4"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[AUTO_DETECT_RIOT_TOOLTIP]"/>
                                    </Grid>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>

                        <Grid
                            Grid.Row="1"
                            Background="#F8F8F8"
                            Margin="0,5,0,0">
                            <Button
                                x:Name="SaveGlobalSettingsButton"
                                Content="[SAVE_BUTTON]"
                                Width="100"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"/>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Notification overlay positioned above content -->
        <!-- Removed duplicate legacy overlay to avoid name collisions -->
    </DockPanel>
</Window>
