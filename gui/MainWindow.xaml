                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Name="HostLabel"
                                           Content="Host:"
                                           VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0"
                                             Grid.Column="1"
                                             Name="ObsHostTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>

                                    <Label Grid.Row="0"
                                           Grid.Column="2"
                                           Name="PortLabel"
                                           Content="Port:"
                                           VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0"
                                             Grid.Column="3"
                                             Name="ObsPortTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>

                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Name="PasswordLabel"
                                           Content="Password:"
                                           VerticalAlignment="Center"/>
                                    <PasswordBox Grid.Row="1"
                                                 Grid.Column="1"
                                                 Name="ObsPasswordBox"
                                                 Margin="5"/>

                                    <CheckBox Grid.Row="2"
                                              Grid.Column="0"
                                              Grid.ColumnSpan="4"
                                              Name="ReplayBufferCheckBox"
                                              Content="[REPLAY_BUFFER_LABEL]"
                                              VerticalAlignment="Center"
                                              Margin="5"/>
