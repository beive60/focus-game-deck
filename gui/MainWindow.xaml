<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="[WINDOW_TITLE]"
    Width="900"
    Height="650"
    MinWidth="700"
    MinHeight="550"
    FontFamily="Yu Gothic UI, Segoe UI Variable, Segoe UI"
    ToolTipService.InitialShowDelay="300"
    ToolTipService.ShowDuration="10000"
    ToolTipService.BetweenShowDelay="100">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem
                x:Name="RefreshMenu"
                Header="[REFRESH_MENU_HEADER]">
                <MenuItem
                    x:Name="RefreshGameListMenuItem"
                    Header="[REFRESH_GAME_LIST]"/>
                <MenuItem
                    x:Name="RefreshManagedAppsListMenuItem"
                    Header="[REFRESH_MANAGED_APPS_LIST]"/>
                <Separator/>
                <MenuItem
                    x:Name="RefreshAllMenuItem"
                    Header="[REFRESH_ALL]"/>
            </MenuItem>
            <MenuItem
                x:Name="HelpMenu"
                Header="[HELP_MENU_HEADER]">
                <MenuItem
                    x:Name="CheckUpdateMenuItem"
                    Header="[CHECK_UPDATE]"/>
                <MenuItem
                    x:Name="FeedbackMenuItem"
                    Header="[FEEDBACK_MENU_ITEM]"/>
                <Separator/>
                <MenuItem
                    x:Name="AboutMenuItem"
                    Header="[ABOUT]"/>
            </MenuItem>
        </Menu>

        <Grid
            DockPanel.Dock="Bottom"
            Height="35">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20,0">
                <TextBlock
                    x:Name="VersionLabel"
                    Text="[VERSION_LABEL]"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="#666"/>
                <TextBlock
                    x:Name="VersionText"
                    Text="1.0.1-alpha"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="#666"
                    Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Notification snackbar in footer area -->
            <Border x:Name="NotificationOverlay"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,20,0"
                    Padding="10,4"
                    CornerRadius="3"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Visibility="Collapsed"
                    Panel.ZIndex="100"
                    IsHitTestVisible="False">
                <TextBlock
                    x:Name="NotificationText"
                    Text="Notification Message"
                    Foreground="Black"
                    FontSize="11"
                    FontWeight="Normal"/>
            </Border>
        </Grid>

        <!-- Wrap main content and overlay in a single grid -->
        <Grid>
            <TabControl x:Name="MainTabControl"
                        Margin="10">

                <TabItem
                    x:Name="GameLauncherTab"
                    Header="[GAME_LAUNCHER_TAB_HEADER]">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>

                        <Grid
                            Grid.Row="0"
                            Margin="20,15">
                            <StackPanel
                                VerticalAlignment="Center">
                                <TextBlock
                                    x:Name="LauncherWelcomeText"
                                    Text="[LAUNCHER_WELCOME_TEXT]"
                                    FontSize="16"
                                    FontWeight="Bold"/>
                                <TextBlock
                                    x:Name="LauncherSubtitleText"
                                    Text="[LAUNCHER_SUBTITLE_TEXT]"
                                    FontSize="12"
                                    Foreground="#666"
                                    Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>

                        <ScrollViewer
                            Grid.Row="1"
                            VerticalScrollBarVisibility="Auto"
                            Margin="20,0,20,10">
                            <ItemsControl
                                x:Name="GameLauncherList"
                                Margin="0,10"/>
                        </ScrollViewer>

                        <Grid
                            Grid.Row="2"
                            Margin="0">
                            <StackPanel
                                Orientation="Vertical"
                                VerticalAlignment="Center"
                                Margin="20,0">
                                <TextBlock
                                    x:Name="LauncherStatusText"
                                    Text="[READY_TO_LAUNCH]"
                                    FontSize="12"
                                    Foreground="#666"/>
                                <TextBlock
                                    x:Name="LauncherHintText"
                                    Text="[LAUNCHER_HINT_TEXT]"
                                    FontSize="10"
                                    Foreground="#888"
                                    Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem
                    x:Name="GamesTab"
                    Header="[GAMES_TAB_HEADER]">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid
                                Grid.Column="0"
                                Margin="10,0,5,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="55"/>
                                </Grid.RowDefinitions>

                                <Label
                                    x:Name="GamesListLabel"
                                    Content="[GAMES_LIST_LABEL]"
                                    Grid.Row="0"
                                    FontWeight="Bold"/>
                                <ListBox
                                    x:Name="GamesList"
                                    Grid.Row="1"
                                    Margin="0,5,0,5"/>
                                <StackPanel
                                    Grid.Row="2"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Center">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,5">
                                        <Button
                                            x:Name="AddGameButton"
                                            Content="[ADD_BUTTON]"
                                            Width="65"
                                            Height="22"
                                            Margin="2"/>
                                        <Button
                                            x:Name="DuplicateGameButton"
                                            Content="[DUPLICATE_BUTTON]"
                                            Width="55"
                                            Height="22"
                                            Margin="2"/>
                                        <Button
                                            x:Name="DeleteGameButton"
                                            Content="[DELETE_BUTTON]"
                                            Width="50"
                                            Height="22"
                                            Margin="2"/>
                                    </StackPanel>
                                    <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                        <Button
                                            x:Name="MoveGameTopButton"
                                            Content="[moveTopButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            FontSize="10"
                                            ToolTip="[moveTopTooltip]"/>
                                        <Button
                                            x:Name="MoveGameUpButton"
                                            Content="[moveUpButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            FontSize="10"
                                            ToolTip="[moveUpTooltip]"/>
                                        <Button
                                            x:Name="MoveGameDownButton"
                                            Content="[moveDownButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            FontSize="10"
                                            ToolTip="[moveDownTooltip]"/>
                                        <Button
                                            x:Name="MoveGameBottomButton"
                                            Content="[moveBottomButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            FontSize="10"
                                            ToolTip="[moveBottomTooltip]"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <ScrollViewer
                                Grid.Column="1"
                                VerticalScrollBarVisibility="Auto">
                                <Grid Margin="5,0,10,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Label
                                        x:Name="GameDetailsLabel"
                                        Content="[GAME_DETAILS_LABEL]"
                                        Grid.Row="0"
                                        FontWeight="Bold"
                                        FontSize="14"/>

                                    <Grid
                                        Grid.Row="1"
                                        Margin="0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="60"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel
                                            x:Name="GameIdLabelPanel"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_GAME_ID]">
                                            <Label
                                                x:Name="GameIdLabel"
                                                Content="[GAME_ID_LABEL]"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="GameIdTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="#0078D4"
                                                Margin="3,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_GAME_ID]"/>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="5">
                                            <TextBox
                                                x:Name="GameIdTextBox"
                                                VerticalContentAlignment="Center"/>
                                            <TextBlock
                                                x:Name="GameIdTextBoxErrorText"
                                                Text="Error Message"
                                                Foreground="#D32F2F"
                                                FontSize="11"
                                                Margin="2,2,0,0"
                                                FontWeight="SemiBold"
                                                Visibility="Collapsed"/>
                                        </StackPanel>

                                        <StackPanel
                                            x:Name="GameNameLabelPanel"
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_DISPLAY_NAME]">
                                            <Label
                                                x:Name="GameNameLabel"
                                                Content="[GAME_NAME_LABEL]"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="GameNameTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="#0078D4"
                                                Margin="3,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_DISPLAY_NAME]"/>
                                        </StackPanel>
                                        <TextBox
                                            x:Name="GameNameTextBox"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            Margin="5"/>

                                        <Label
                                            x:Name="PlatformLabel"
                                            Content="[PLATFORM_LABEL]"
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"/>
                                        <ComboBox
                                            x:Name="PlatformComboBox"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="5">
                                            <ComboBoxItem
                                                x:Name="PlatformStandaloneItem"
                                                Content="[STANDALONE_PLATFORM]"
                                                Tag="standalone"/>
                                            <ComboBoxItem
                                                x:Name="PlatformSteamItem"
                                                Content="[STEAM_PLATFORM]"
                                                Tag="steam"/>
                                            <ComboBoxItem
                                                x:Name="PlatformEpicItem"
                                                Content="[EPIC_PLATFORM]"
                                                Tag="epic"/>
                                            <ComboBoxItem
                                                x:Name="PlatformRiotItem"
                                                Content="[RIOT_PLATFORM]"
                                                Tag="riot"/>
                                        </ComboBox>

                                        <StackPanel
                                            x:Name="SteamAppIdLabelPanel"
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_STEAM_APP_ID]">
                                            <Label
                                                x:Name="SteamAppIdLabel"
                                                Content="[STEAM_APP_ID_LABEL]"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="SteamAppIdTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="#0078D4"
                                                Margin="3,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_STEAM_APP_ID]"/>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="5">
                                            <TextBox
                                                x:Name="SteamAppIdTextBox"
                                                VerticalContentAlignment="Center"/>
                                            <TextBlock
                                                x:Name="SteamAppIdTextBoxErrorText"
                                                Text="Error Message"
                                                Foreground="#D32F2F"
                                                FontSize="11"
                                                Margin="2,2,0,0"
                                                FontWeight="SemiBold"
                                                Visibility="Collapsed"/>
                                        </StackPanel>

                                        <StackPanel
                                            x:Name="EpicGameIdLabelPanel"
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_EPIC_GAME_ID]">
                                            <Label
                                                x:Name="EpicGameIdLabel"
                                                Content="[EPIC_GAME_ID_LABEL]"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="EpicGameIdTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="#0078D4"
                                                Margin="3,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_EPIC_GAME_ID]"/>
                                        </StackPanel>
                                        <TextBox
                                            x:Name="EpicGameIdTextBox"
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            Margin="5"/>

                                        <StackPanel
                                            x:Name="RiotGameIdLabelPanel"
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_RIOT_GAME_ID]">
                                            <Label
                                                x:Name="RiotGameIdLabel"
                                                Content="[RIOT_GAME_ID_LABEL]"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="RiotGameIdTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="#0078D4"
                                                Margin="3,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_RIOT_GAME_ID]"/>
                                        </StackPanel>
                                        <TextBox
                                            x:Name="RiotGameIdTextBox"
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            Margin="5"/>

                                        <StackPanel
                                            x:Name="ExecutablePathLabelPanel"
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_EXECUTABLE_PATH]">
                                            <Label
                                                x:Name="ExecutablePathLabel"
                                                Content="[EXECUTABLE_PATH_LABEL]"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="ExecutablePathTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="#0078D4"
                                                Margin="3,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_EXECUTABLE_PATH]"/>
                                        </StackPanel>
                                        <Grid
                                            x:Name="ExecutablePathInputGrid"
                                            Grid.Row="6"
                                            Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox
                                                x:Name="ExecutablePathTextBox"
                                                Grid.Column="0"
                                                VerticalContentAlignment="Center"
                                                Margin="5"/>
                                            <Button
                                                x:Name="BrowseExecutablePathButton"
                                                Content="[BROWSE_BUTTON]"
                                                Grid.Column="1"
                                                Width="70"
                                                Height="25"
                                                Margin="5,0,5,0"/>
                                        </Grid>

                                        <StackPanel
                                            x:Name="ProcessNameLabelPanel"
                                            Grid.Row="7"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_PROCESS_NAME]">
                                            <Label
                                                x:Name="ProcessNameLabel"
                                                Content="[PROCESS_NAME_LABEL]"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="ProcessNameTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="#0078D4"
                                                Margin="3,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_PROCESS_NAME]"/>
                                        </StackPanel>
                                        <TextBox
                                            x:Name="ProcessNameTextBox"
                                            Grid.Row="7"
                                            Grid.Column="1"
                                            VerticalContentAlignment="Center"
                                            Margin="5"/>

                                        <Label
                                            x:Name="GameCommentLabel"
                                            Grid.Row="8"
                                            Grid.Column="0"
                                            Content="[COMMENT_LABEL]"
                                            VerticalAlignment="Top"
                                            Margin="0,5,0,0"/>
                                        <TextBox
                                            x:Name="GameCommentTextBox"
                                            Grid.Row="8"
                                            Grid.Column="1"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            VerticalScrollBarVisibility="Auto"
                                            Height="50"
                                            Margin="5"
                                            VerticalContentAlignment="Top"
                                            Tag="[commentPlaceholder]"/>
                                    </Grid>

                                    <Label
                                        x:Name="AppsToManageLabel"
                                        Content="[APPS_TO_MANAGE_LABEL]"
                                        Grid.Row="2"
                                        FontWeight="Bold"
                                        Margin="0,10,0,5"/>
                                    <StackPanel
                                        x:Name="AppsToManagePanel"
                                        Grid.Row="3"
                                        Margin="10,0"/>

                                    <!-- App Integration Section -->
                                    <Label
                                        Content="アプリ連携:"
                                        Grid.Row="4"
                                        FontWeight="Bold"
                                        Margin="0,20,0,5"/>
                                    <StackPanel
                                        Grid.Row="5"
                                        Margin="10,5,0,0">
                                        <TextBlock
                                            Text="このゲームで使用する連携機能を選択してください"
                                            Foreground="#666"
                                            FontSize="11"
                                            Margin="0,0,0,10"/>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,5">
                                            <CheckBox
                                                x:Name="UseOBSIntegrationCheckBox"
                                                Content="OBS Studio"
                                                Width="150"
                                                VerticalAlignment="Center"/>
                                            <Button
                                                x:Name="OpenOBSTabButton"
                                                Content="→ 設定を開く"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#0078D4"
                                                Cursor="Hand"
                                                Padding="5,0"
                                                VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- TODO: Re-enable in future release -->
                                        <!-- Disabled for v1.0 - Discord integration has known bugs -->
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,5"
                                                    Visibility="Collapsed">
                                            <CheckBox
                                                x:Name="UseDiscordIntegrationCheckBox"
                                                Content="Discord"
                                                Width="150"
                                                VerticalAlignment="Center"/>
                                            <Button
                                                x:Name="OpenDiscordTabButton"
                                                Content="→ 設定を開く"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#0078D4"
                                                Cursor="Hand"
                                                Padding="5,0"
                                                VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,5">
                                            <CheckBox
                                                x:Name="UseVTubeStudioIntegrationCheckBox"
                                                Content="VTube Studio"
                                                Width="150"
                                                VerticalAlignment="Center"/>
                                            <Button
                                                x:Name="OpenVTubeStudioTabButton"
                                                Content="→ 設定を開く"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#0078D4"
                                                Cursor="Hand"
                                                Padding="5,0"
                                                VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Grid
                                        Grid.Row="6"
                                        Margin="0,20,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            x:Name="LauncherTypeLabel2"
                                            Content="[LAUNCHER_TYPE_LABEL]"
                                            Grid.Column="0"
                                            VerticalAlignment="Center"/>
                                        <StackPanel
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="5">
                                            <ComboBox
                                                x:Name="GameLauncherTypeCombo"
                                                Width="200"
                                                HorizontalAlignment="Left">
                                                <ComboBoxItem
                                                    x:Name="GameLauncherTypeEnhancedItem"
                                                    Content="[ENHANCED_SHORTCUTS]"
                                                    Tag="lnk"
                                                    IsSelected="True"/>
                                                <ComboBoxItem
                                                    x:Name="GameLauncherTypeTraditionalItem"
                                                    Content="[TRADITIONAL_BATCH]"
                                                    Tag="bat"/>
                                            </ComboBox>
                                            <Button
                                                x:Name="GenerateLaunchersButton"
                                                Content="[GENERATE_LAUNCHERS]"
                                                Width="130"
                                                Height="25"
                                                Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </ScrollViewer>
                        </Grid>

                        <Grid
                            Grid.Row="1"
                            Background="#F8F8F8"
                            Margin="0,5,0,0">
                            <Button
                                x:Name="SaveGameSettingsButton"
                                Content="[SAVE_BUTTON]"
                                Width="100"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"/>
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem
                    x:Name="ManagedAppsTab"
                    Header="[MANAGED_APPS_TAB_HEADER]">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid
                                Grid.Column="0"
                                Margin="10,0,5,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="55"/>
                                </Grid.RowDefinitions>

                                <Label
                                    x:Name="AppsListLabel"
                                    Content="[APPS_LIST_LABEL]"
                                    Grid.Row="0"
                                    FontWeight="Bold"/>
                                <ListBox
                                    x:Name="ManagedAppsList"
                                    Grid.Row="1"
                                    Margin="0,5,0,5"/>
                                <StackPanel
                                    Grid.Row="2"
                                    Orientation="Vertical"
                                    HorizontalAlignment="Center">
                                    <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,5">
                                        <Button
                                            x:Name="AddAppButton"
                                            Content="[ADD_BUTTON]"
                                            Width="65"
                                            Height="22"
                                            Margin="2"/>
                                        <Button
                                            x:Name="DuplicateAppButton"
                                            Content="[DUPLICATE_BUTTON]"
                                            Width="55"
                                            Height="22"
                                            Margin="2"/>
                                        <Button
                                            x:Name="DeleteAppButton"
                                            Content="[DELETE_BUTTON]"
                                            Width="50"
                                            Height="22"
                                            Margin="2"/>
                                    </StackPanel>
                                    <StackPanel
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                        <Button
                                            x:Name="MoveAppTopButton"
                                            Content="[moveTopButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            FontSize="10"
                                            ToolTip="[moveTopTooltip]"/>
                                        <Button
                                            x:Name="MoveAppUpButton"
                                            Content="[moveUpButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            FontSize="10"
                                            ToolTip="[moveUpTooltip]"/>
                                        <Button
                                            x:Name="MoveAppDownButton"
                                            Content="[moveDownButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            FontSize="10"
                                            ToolTip="[moveDownTooltip]"/>
                                        <Button
                                            x:Name="MoveAppBottomButton"
                                            Content="[moveBottomButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            FontSize="10"
                                            ToolTip="[moveBottomTooltip]"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <ScrollViewer
                                Grid.Column="1"
                                VerticalScrollBarVisibility="Auto">
                                <Grid Margin="5,0,10,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Label
                                        x:Name="AppDetailsLabel"
                                        Content="[APP_DETAILS_LABEL]"
                                        Grid.Row="0"
                                        FontWeight="Bold"
                                        FontSize="14"/>

                                    <Grid
                                        Grid.Row="1"
                                        Margin="0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
