<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="[WINDOW_TITLE]"
    Width="950"
    Height="700"
    MinWidth="750"
    MinHeight="600"
    FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
    Background="{DynamicResource PrimaryBackgroundBrush}"
    ToolTipService.InitialShowDelay="300"
    ToolTipService.ShowDuration="10000"
    ToolTipService.BetweenShowDelay="100">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel Background="{DynamicResource PrimaryBackgroundBrush}">
        <Menu DockPanel.Dock="Top" 
              Background="{DynamicResource PrimaryBackgroundBrush}"
              Foreground="{DynamicResource TextPrimaryBrush}"
              FontFamily="{StaticResource PrimaryFontFamily}"
              FontSize="{StaticResource FontSizeBody}"
              BorderBrush="{DynamicResource BorderBrush}"
              BorderThickness="0,0,0,1">
            <MenuItem
                x:Name="RefreshMenu"
                Header="[REFRESH_MENU_HEADER]">
                <MenuItem
                    x:Name="RefreshGameListMenuItem"
                    Header="[REFRESH_GAME_LIST]"/>
                <MenuItem
                    x:Name="RefreshManagedAppsListMenuItem"
                    Header="[REFRESH_MANAGED_APPS_LIST]"/>
                <Separator/>
                <MenuItem
                    x:Name="RefreshAllMenuItem"
                    Header="[REFRESH_ALL]"/>
            </MenuItem>
            <MenuItem
                x:Name="ToolsMenu"
                Header="[TOOLS_MENU_HEADER]">
                <MenuItem
                    x:Name="CreateAllShortcutsMenuItem"
                    Header="[CREATE_ALL_SHORTCUTS]"/>
            </MenuItem>
            <MenuItem
                x:Name="HelpMenu"
                Header="[HELP_MENU_HEADER]">
                <MenuItem
                    x:Name="CheckUpdateMenuItem"
                    Header="[CHECK_UPDATE]"/>
                <MenuItem
                    x:Name="FeedbackMenuItem"
                    Header="[FEEDBACK_MENU_ITEM]"/>
                <Separator/>
                <MenuItem
                    x:Name="AboutMenuItem"
                    Header="[ABOUT]"/>
            </MenuItem>
        </Menu>

        <Border
            DockPanel.Dock="Bottom"
            Background="{DynamicResource SecondaryBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,1,0,0"
            Height="40">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="24,0">
                    <TextBlock
                        x:Name="VersionLabel"
                        Text="[VERSION_LABEL]"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeSmall}"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        FontFamily="{StaticResource PrimaryFontFamily}"/>
                    <TextBlock
                        x:Name="VersionText"
                        Text="1.0.1-alpha"
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeSmall}"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        FontFamily="{StaticResource PrimaryFontFamily}"
                        Margin="6,0,0,0"/>
                </StackPanel>

                <!-- Modern notification snackbar -->
                <Border x:Name="NotificationOverlay"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,24,0"
                        Padding="16,8"
                        CornerRadius="{StaticResource RadiusSmall}"
                        Background="{DynamicResource AccentBrush}"
                        BorderBrush="{DynamicResource AccentBrush}"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Panel.ZIndex="100"
                        IsHitTestVisible="False"
                        Effect="{StaticResource ShadowElevation2}">
                    <TextBlock
                        x:Name="NotificationText"
                        Text="Notification Message"
                        Foreground="White"
                        FontSize="{StaticResource FontSizeCaption}"
                        FontFamily="{StaticResource PrimaryFontFamily}"
                        FontWeight="Medium"/>
                </Border>
            </Grid>
        </Border>

        <!-- Wrap main content and overlay in a single grid -->
        <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
            <TabControl x:Name="MainTabControl"
                        Style="{StaticResource ModernTabControl}"
                        Margin="0"
                        Padding="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem" BasedOn="{StaticResource ModernTabItem}"/>
                </TabControl.Resources>

                <TabItem
                    x:Name="GameLauncherTab"
                    Header="[GAME_LAUNCHER_TAB_HEADER]">
                    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Hero Header Section -->
                        <Border
                            Grid.Row="0"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="32,24">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    x:Name="LauncherWelcomeText"
                                    Text="[LAUNCHER_WELCOME_TEXT]"
                                    FontSize="{StaticResource FontSizeHeading2}"
                                    FontFamily="{StaticResource PrimaryFontFamily}"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock
                                    x:Name="LauncherSubtitleText"
                                    Text="[LAUNCHER_SUBTITLE_TEXT]"
                                    FontSize="{StaticResource FontSizeBody}"
                                    FontFamily="{StaticResource PrimaryFontFamily}"
                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                    Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Game List Section -->
                        <ScrollViewer
                            Grid.Row="1"
                            VerticalScrollBarVisibility="Auto"
                            Padding="32,24"
                            Background="{DynamicResource PrimaryBackgroundBrush}">
                            <ItemsControl
                                x:Name="GameLauncherList"
                                Margin="0"/>
                        </ScrollViewer>

                        <!-- Status Footer -->
                        <Border
                            Grid.Row="2"
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="32,16">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    x:Name="LauncherStatusText"
                                    Text="[READY_TO_LAUNCH]"
                                    FontSize="{StaticResource FontSizeBody}"
                                    FontFamily="{StaticResource PrimaryFontFamily}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock
                                    x:Name="LauncherHintText"
                                    Text="[LAUNCHER_HINT_TEXT]"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    FontFamily="{StaticResource PrimaryFontFamily}"
                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                    Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <TabItem
                    x:Name="GamesTab"
                    Header="[GAMES_TAB_HEADER]">
                    <Grid Background="{DynamicResource PrimaryBackgroundBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="280"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Sidebar: Games List -->
                            <Border
                                Grid.Column="0"
                                Background="{DynamicResource SecondaryBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,1,0"
                                Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        x:Name="GamesListLabel"
                                        Text="[GAMES_LIST_LABEL]"
                                        Grid.Row="0"
                                        FontSize="{StaticResource FontSizeHeading3}"
                                        FontFamily="{StaticResource PrimaryFontFamily}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        Margin="0,0,0,16"/>
                                    <ListBox
                                        x:Name="GamesList"
                                        Grid.Row="1"
                                        Style="{StaticResource ModernListBox}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        AllowDrop="True">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource ModernListBoxItem}">
                                                <Setter Property="AllowDrop" Value="True"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                    <TextBlock
                                        x:Name="GamesDragDropHint"
                                        Grid.Row="2"
                                        Text="[dragDropReorderHint]"
                                        FontSize="{StaticResource FontSizeSmall}"
                                        FontFamily="{StaticResource PrimaryFontFamily}"
                                        Foreground="{DynamicResource TextSecondaryBrush}"
                                        HorizontalAlignment="Center"
                                        TextWrapping="Wrap"
                                        TextAlignment="Center"
                                        Margin="0,16,0,0"/>
                                </Grid>
                            </Border>

                            <!-- Right Panel: Game Details -->
                            <ScrollViewer
                                Grid.Column="1"
                                VerticalScrollBarVisibility="Auto"
                                Background="{DynamicResource PrimaryBackgroundBrush}"
                                Padding="24">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        x:Name="GameDetailsLabel"
                                        Text="[GAME_DETAILS_LABEL]"
                                        Grid.Row="0"
                                        FontSize="{StaticResource FontSizeHeading2}"
                                        FontFamily="{StaticResource PrimaryFontFamily}"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        Margin="0,0,0,24"/>

                                    <Grid
                                        Grid.Row="1"
                                        Margin="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel
                                            x:Name="GameIdLabelPanel"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"
                                            ToolTip="[TOOLTIP_GAME_ID]">
                                            <TextBlock
                                                x:Name="GameIdLabel"
                                                Text="[GAME_ID_LABEL]"
                                                FontSize="{StaticResource FontSizeBody}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="GameIdTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource AccentBrush}"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_GAME_ID]"/>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,0,16">
                                            <TextBox
                                                x:Name="GameIdTextBox"
                                                Style="{StaticResource ModernTextBox}"/>
                                            <TextBlock
                                                x:Name="GameIdTextBoxErrorText"
                                                Text="Error Message"
                                                Foreground="{DynamicResource ErrorBrush}"
                                                FontSize="{StaticResource FontSizeSmall}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Margin="4,4,0,0"
                                                FontWeight="SemiBold"
                                                Visibility="Collapsed"/>
                                        </StackPanel>

                                        <StackPanel
                                            x:Name="GameNameLabelPanel"
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"
                                            ToolTip="[TOOLTIP_DISPLAY_NAME]">
                                            <TextBlock
                                                x:Name="GameNameLabel"
                                                Text="[GAME_NAME_LABEL]"
                                                FontSize="{StaticResource FontSizeBody}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="GameNameTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource AccentBrush}"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_DISPLAY_NAME]"/>
                                        </StackPanel>
                                        <TextBox
                                            x:Name="GameNameTextBox"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Style="{StaticResource ModernTextBox}"
                                            Margin="0,0,0,16"/>

                                        <TextBlock
                                            x:Name="PlatformLabel"
                                            Text="[PLATFORM_LABEL]"
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            FontSize="{StaticResource FontSizeBody}"
                                            FontFamily="{StaticResource PrimaryFontFamily}"
                                            Foreground="{DynamicResource TextPrimaryBrush}"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"/>
                                        <ComboBox
                                            x:Name="PlatformComboBox"
                                            Style="{StaticResource ModernComboBox}"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="0,0,0,16">
                                            <ComboBoxItem
                                                x:Name="PlatformStandaloneItem"
                                                Content="[STANDALONE_PLATFORM]"
                                                Tag="standalone"/>
                                            <ComboBoxItem
                                                x:Name="PlatformSteamItem"
                                                Content="[STEAM_PLATFORM]"
                                                Tag="steam"/>
                                            <ComboBoxItem
                                                x:Name="PlatformEpicItem"
                                                Content="[EPIC_PLATFORM]"
                                                Tag="epic"/>
                                            <ComboBoxItem
                                                x:Name="PlatformRiotItem"
                                                Content="[RIOT_PLATFORM]"
                                                Tag="riot"/>
                                        </ComboBox>

                                        <StackPanel
                                            x:Name="SteamAppIdLabelPanel"
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"
                                            ToolTip="[TOOLTIP_STEAM_APP_ID]">
                                            <TextBlock
                                                x:Name="SteamAppIdLabel"
                                                Text="[STEAM_APP_ID_LABEL]"
                                                FontSize="{StaticResource FontSizeBody}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="SteamAppIdTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource AccentBrush}"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_STEAM_APP_ID]"/>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,0,0,16">
                                            <TextBox
                                                x:Name="SteamAppIdTextBox"
                                                Style="{StaticResource ModernTextBox}"/>
                                            <TextBlock
                                                x:Name="SteamAppIdTextBoxErrorText"
                                                Text="Error Message"
                                                Foreground="{DynamicResource ErrorBrush}"
                                                FontSize="{StaticResource FontSizeSmall}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Margin="4,4,0,0"
                                                FontWeight="SemiBold"
                                                Visibility="Collapsed"/>
                                        </StackPanel>

                                        <StackPanel
                                            x:Name="EpicGameIdLabelPanel"
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"
                                            ToolTip="[TOOLTIP_EPIC_GAME_ID]">
                                            <TextBlock
                                                x:Name="EpicGameIdLabel"
                                                Text="[EPIC_GAME_ID_LABEL]"
                                                FontSize="{StaticResource FontSizeBody}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="EpicGameIdTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource AccentBrush}"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_EPIC_GAME_ID]"/>
                                        </StackPanel>
                                        <TextBox
                                            x:Name="EpicGameIdTextBox"
                                            Style="{StaticResource ModernTextBox}"
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Margin="0,0,0,16"/>

                                        <StackPanel
                                            x:Name="RiotGameIdLabelPanel"
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"
                                            ToolTip="[TOOLTIP_RIOT_GAME_ID]">
                                            <TextBlock
                                                x:Name="RiotGameIdLabel"
                                                Text="[RIOT_GAME_ID_LABEL]"
                                                FontSize="{StaticResource FontSizeBody}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="RiotGameIdTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource AccentBrush}"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_RIOT_GAME_ID]"/>
                                        </StackPanel>
                                        <TextBox
                                            x:Name="RiotGameIdTextBox"
                                            Style="{StaticResource ModernTextBox}"
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            Margin="0,0,0,16"/>

                                        <StackPanel
                                            x:Name="ExecutablePathLabelPanel"
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"
                                            ToolTip="[TOOLTIP_EXECUTABLE_PATH]">
                                            <TextBlock
                                                x:Name="ExecutablePathLabel"
                                                Text="[EXECUTABLE_PATH_LABEL]"
                                                FontSize="{StaticResource FontSizeBody}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="ExecutablePathTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource AccentBrush}"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_EXECUTABLE_PATH]"/>
                                        </StackPanel>
                                        <Grid
                                            x:Name="ExecutablePathInputGrid"
                                            Grid.Row="6"
                                            Grid.Column="1"
                                            Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox
                                                x:Name="ExecutablePathTextBox"
                                                Style="{StaticResource ModernTextBox}"
                                                Grid.Column="0"
                                                Margin="0,0,5,0"/>
                                            <Button
                                                x:Name="BrowseExecutablePathButton"
                                                Content="[BROWSE_BUTTON]"
                                                Grid.Column="1"
                                                Width="70"
                                                Height="25"
                                                Margin="5,0,5,0"/>
                                        </Grid>

                                        <StackPanel
                                            x:Name="ProcessNameLabelPanel"
                                            Grid.Row="7"
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"
                                            ToolTip="[TOOLTIP_PROCESS_NAME]">
                                            <TextBlock
                                                x:Name="ProcessNameLabel"
                                                Text="[PROCESS_NAME_LABEL]"
                                                FontSize="{StaticResource FontSizeBody}"
                                                FontFamily="{StaticResource PrimaryFontFamily}"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                VerticalAlignment="Center"/>
                                            <TextBlock
                                                x:Name="ProcessNameTooltip"
                                                Text="?"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource AccentBrush}"
                                                Margin="6,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_PROCESS_NAME]"/>
                                        </StackPanel>
                                        <TextBox
                                            x:Name="ProcessNameTextBox"
                                            Style="{StaticResource ModernTextBox}"
                                            Grid.Row="7"
                                            Grid.Column="1"
                                            Margin="0,0,0,16"/>

                                        <TextBlock
                                            x:Name="GameCommentLabel"
                                            Grid.Row="8"
                                            Grid.Column="0"
                                            Text="[COMMENT_LABEL]"
                                            FontSize="{StaticResource FontSizeBody}"
                                            FontFamily="{StaticResource PrimaryFontFamily}"
                                            Foreground="{DynamicResource TextPrimaryBrush}"
                                            VerticalAlignment="Top"
                                            Margin="0,8,0,0"/>
                                        <TextBox
                                            x:Name="GameCommentTextBox"
                                            Style="{StaticResource ModernTextBox}"
                                            Grid.Row="8"
                                            Grid.Column="1"
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            VerticalScrollBarVisibility="Auto"
                                            Height="50"
                                            Margin="0,0,0,16"
                                            VerticalContentAlignment="Top"
                                            Tag="[commentPlaceholder]"/>
                                    </Grid>

                                    <TextBlock
                                        x:Name="AppsToManageLabel"
                                        Text="[APPS_TO_MANAGE_LABEL]"
                                        FontSize="{StaticResource FontSizeBody}"
                                        FontFamily="{StaticResource PrimaryFontFamily}"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        Grid.Row="2"
                                        FontWeight="Bold"
                                        Margin="0,10,0,5"/>
                                    <StackPanel
                                        x:Name="AppsToManagePanel"
                                        Grid.Row="3"
                                        Margin="10,0"/>

                                    <!-- App Integration Section -->
                                    <TextBlock
                                        x:Name="GameIntegrationSectionLabel"
                                        Text="[GAME_INTEGRATION_SECTION_LABEL]"
                                        FontSize="{StaticResource FontSizeBody}"
                                        FontFamily="{StaticResource PrimaryFontFamily}"
                                        Foreground="{DynamicResource TextPrimaryBrush}"
                                        Grid.Row="4"
                                        FontWeight="Bold"
                                        Margin="0,20,0,5"/>
                                    <StackPanel
                                        Grid.Row="5"
                                        Margin="10,5,0,0">
                                        <TextBlock
                                            x:Name="GameIntegrationDescriptionText"
                                            Text="[GAME_INTEGRATION_DESCRIPTION]"
                                            Foreground="#666"
                                            FontSize="11"
                                            Margin="0,0,0,10"/>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,5">
                                            <CheckBox
                                                x:Name="UseOBSIntegrationCheckBox"
                                                Content="OBS Studio"
                                                Width="150"
                                                VerticalAlignment="Center"/>
                                            <Button
                                                x:Name="OpenOBSTabButton"
                                                Content="[OPEN_INTEGRATION_SETTINGS]"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#0078D4"
                                                Cursor="Hand"
                                                Padding="5,0"
                                                VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- OBS Game-Specific Settings -->
                                        <GroupBox
                                            x:Name="OBSGameSpecificSettingsGroup"
                                            Margin="20,10,0,10"
                                            IsEnabled="{Binding ElementName=UseOBSIntegrationCheckBox, Path=IsChecked}">
                                            <StackPanel Margin="10">
                                                <!-- Replay Buffer Behavior -->
                                                <TextBlock
                                                    x:Name="OBSReplayBufferBehaviorLabel"
                                                    FontSize="{StaticResource FontSizeBody}"
                                                    FontFamily="{StaticResource PrimaryFontFamily}"
                                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                                    Margin="0,8,0,0"/>
                                                <ComboBox
                                                    x:Name="OBSReplayBufferBehaviorCombo"
                                                    Style="{StaticResource ModernComboBox}"
                                                    Margin="0,0,0,16">
                                                    <ComboBoxItem
                                                        x:Name="OBSReplayBufferGlobalItem"
                                                        Tag="UseGlobal"/>
                                                    <ComboBoxItem
                                                        x:Name="OBSReplayBufferEnableItem"
                                                        Tag="Enable"/>
                                                    <ComboBoxItem
                                                        x:Name="OBSReplayBufferDisableItem"
                                                        Tag="Disable"/>
                                                </ComboBox>

                                                <!-- Target Scene -->
                                                <TextBlock
                                                    x:Name="OBSTargetSceneLabel"
                                                    FontSize="{StaticResource FontSizeBody}"
                                                    FontFamily="{StaticResource PrimaryFontFamily}"
                                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                                    Margin="0,8,0,0"/>
                                                <TextBox
                                                    x:Name="OBSTargetSceneTextBox"
                                                    Style="{StaticResource ModernTextBox}"
                                                    Margin="0,0,0,16"/>

                                                <!-- Enable Rollback -->
                                                <CheckBox
                                                    x:Name="OBSEnableRollbackCheckBox"
                                                    Margin="0,5,0,5"/>
                                            </StackPanel>
                                        </GroupBox>

                                        <!-- TODO: Re-enable in future release -->
                                        <!-- Disabled for v1.0 - Discord integration has known bugs -->
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,5"
                                                    Visibility="Collapsed">
                                            <CheckBox
                                                x:Name="UseDiscordIntegrationCheckBox"
                                                Content="Discord"
                                                Width="150"
                                                VerticalAlignment="Center"/>
                                            <Button
                                                x:Name="OpenDiscordTabButton"
                                                Content="[OPEN_INTEGRATION_SETTINGS]"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#0078D4"
                                                Cursor="Hand"
                                                Padding="5,0"
                                                VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,5">
                                            <CheckBox
                                                x:Name="UseVTubeStudioIntegrationCheckBox"
                                                Content="VTube Studio"
                                                Width="150"
                                                VerticalAlignment="Center"/>
                                            <Button
                                                x:Name="OpenVTubeStudioTabButton"
                                                Content="[OPEN_INTEGRATION_SETTINGS]"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#0078D4"
                                                Cursor="Hand"
                                                Padding="5,0"
                                                VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- VTube Studio Game-Specific Settings -->
                                        <GroupBox
                                            x:Name="VTubeGameSpecificSettingsGroup"
