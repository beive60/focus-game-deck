<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="[WINDOW_TITLE]"
    Height="650"
    Width="900"
    MinHeight="550"
    MinWidth="700"
    FontFamily="Yu Gothic UI, Segoe UI Variable, Segoe UI"
    ToolTipService.InitialShowDelay="300"
    ToolTipService.ShowDuration="10000"
    ToolTipService.BetweenShowDelay="100">

    <DockPanel>
        <!-- Menu Bar -->
        <Menu
            DockPanel.Dock="Top">
            <MenuItem
                Name="HelpMenu"
                Header="[HELP_MENU_HEADER]">
                <MenuItem
                    Name="CheckUpdateMenuItem"
                    Header="[CHECK_UPDATE_MENU_ITEM]"/>
                <Separator/>
                <MenuItem
                    Name="AboutMenuItem"
                    Header="[ABOUT_MENU_ITEM]"/>
            </MenuItem>
        </Menu>

        <!-- Footer with reduced height -->
        <Grid
            DockPanel.Dock="Bottom"
            Height="35">
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="20,0">
                <TextBlock
                    Name="VersionLabel"
                    Text="[VERSION_LABEL]"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="#666"/>
                <TextBlock
                    Name="VersionText"
                    Text="1.0.1-alpha"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="#666"
                    Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main TabControl -->
        <TabControl
            Name="MainTabControl"
            Margin="10">

            <!-- Game Launcher Tab (New Primary Tab) -->
            <TabItem
                Header="[GAME_LAUNCHER_TAB_HEADER]"
                Name="GameLauncherTab">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section -->
                    <Grid
                        Grid.Row="0"
                        Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            VerticalAlignment="Center">
                            <TextBlock
                                Name="LauncherWelcomeText"
                                Text="[LAUNCHER_WELCOME_TEXT]"
                                FontSize="16"
                                FontWeight="Bold"/>
                            <TextBlock
                                Name="LauncherSubtitleText"
                                Text="[LAUNCHER_SUBTITLE_TEXT]"
                                FontSize="12"
                                Foreground="#666"
                                Margin="0,2,0,0"/>
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            Name="RefreshGameListButton"
                            Content="[REFRESH_BUTTON]"
                            Width="100"
                            Height="30"
                            VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Game List Section -->
                    <ScrollViewer
                        Grid.Row="1"
                        Margin="20,0,20,10"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl
                            Name="GameLauncherList"
                            Margin="0,10">
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Footer Section -->
                    <Grid
                        Grid.Row="2"
                        Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="20,0">
                            <TextBlock
                                Name="LauncherStatusText"
                                Text="[READY_TO_LAUNCH]"
                                FontSize="12"
                                Foreground="#666"/>
                            <TextBlock
                                Name="LauncherHintText"
                                Text="[LAUNCHER_HINT_TEXT]"
                                FontSize="10"
                                Foreground="#888"
                                Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                            <Button
                                Name="AddNewGameButton"
                                Content="[ADD_GAME_BUTTON]"
                                Width="100"
                                Height="35"
                                Margin="5"/>
                            <Button
                                Name="OpenConfigButton"
                                Content="[OPEN_CONFIG_BUTTON]"
                                Width="100"
                                Height="35"
                                Margin="5"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Game Settings Tab -->
            <TabItem
                Header="[GAMES_TAB_HEADER]"
                Name="GamesTab">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Games List -->
                        <Grid
                            Grid.Column="0"
                            Margin="10,0,5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="55"/>
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                Name="GamesListLabel"
                                Content="[GAMES_LIST_LABEL]"
                                FontWeight="Bold"/>
                            <ListBox
                                Grid.Row="1"
                                Name="GamesList"
                                Margin="0,5,0,5"/>
                            <StackPanel
                                Grid.Row="2"
                                Orientation="Vertical"
                                HorizontalAlignment="Center">
                                <!-- Main action buttons -->
                                <StackPanel
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,5">
                                    <Button
                                        Name="AddGameButton"
                                        Content="[ADD_BUTTON]"
                                        Width="65"
                                        Height="22"
                                        Margin="2"/>
                                    <Button
                                        Name="DuplicateGameButton"
                                        Content="[DUPLICATE_BUTTON]"
                                        Width="55"
                                        Height="22"
                                        Margin="2"/>
                                    <Button
                                        Name="DeleteGameButton"
                                        Content="[DELETE_BUTTON]"
                                        Width="50"
                                        Height="22"
                                        Margin="2"/>
                                </StackPanel>

                                <!-- Game order buttons -->
                                <StackPanel
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,0">
                                    <Button
                                        Name="MoveGameTopButton"
                                        Content="[moveTopButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        ToolTip="[moveTopTooltip]"
                                        FontSize="10"/>
                                    <Button
                                        Name="MoveGameUpButton"
                                        Content="[moveUpButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        ToolTip="[moveUpTooltip]"
                                        FontSize="10"/>
                                    <Button
                                        Name="MoveGameDownButton"
                                        Content="[moveDownButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        ToolTip="[moveDownTooltip]"
                                        FontSize="10"/>
                                    <Button
                                        Name="MoveGameBottomButton"
                                        Content="[moveBottomButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        ToolTip="[moveBottomTooltip]"
                                        FontSize="10"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Game Details -->
                        <ScrollViewer
                            Grid.Column="1"
                            VerticalScrollBarVisibility="Auto">
                            <Grid
                                Margin="5,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label
                                    Grid.Row="0"
                                    Name="GameDetailsLabel"
                                    Content="[GAME_DETAILS_LABEL]"
                                    FontWeight="Bold"
                                    FontSize="14"/>

                                <Grid
                                    Grid.Row="1"
                                    Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_GAME_ID]">
                                        <Label
                                            Name="GameIdLabel"
                                            Content="[GAME_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_GAME_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Name="GameIdTextBox"
                                        Margin="5"
                                        VerticalContentAlignment="Center"/>

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_DISPLAY_NAME]">
                                        <Label
                                            Name="GameNameLabel"
                                            Content="[GAME_NAME_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_DISPLAY_NAME]"/>
                                    </StackPanel>
                                    <TextBox
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Name="GameNameTextBox"
                                        Margin="5"
                                        VerticalContentAlignment="Center"/>

                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Name="PlatformLabel"
                                        Content="[PLATFORM_LABEL]"
                                        VerticalAlignment="Center"/>
                                    <ComboBox
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Name="PlatformComboBox"
                                        Margin="5">
                                        <ComboBoxItem
                                            Content="[STANDALONE_PLATFORM]"
                                            Tag="standalone"/>
                                        <ComboBoxItem
                                            Content="[STEAM_PLATFORM]"
                                            Tag="steam"/>
                                        <ComboBoxItem
                                            Content="[EPIC_PLATFORM]"
                                            Tag="epic"/>
                                        <ComboBoxItem
                                            Content="[RIOT_PLATFORM]"
                                            Tag="riot"/>
                                    </ComboBox>

                                    <StackPanel
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_STEAM_APP_ID]">
                                        <Label
                                            Name="SteamAppIdLabel"
                                            Content="[STEAM_APP_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_STEAM_APP_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Name="SteamAppIdTextBox"
                                        Margin="5"
                                        VerticalContentAlignment="Center"/>

                                    <StackPanel
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        ToolTip="[TOOLTIP_EPIC_GAME_ID]">
                                        <Label
                                            Name="EpicGameIdLabel"
                                            Content="[EPIC_GAME_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_EPIC_GAME_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        Name="EpicGameIdTextBox"
                                        Margin="5"
                                        VerticalContentAlignment="Center"
                                        Visibility="Collapsed"/>

                                    <StackPanel
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        ToolTip="[TOOLTIP_RIOT_GAME_ID]">
                                        <Label
                                            Name="RiotGameIdLabel"
                                            Content="[RIOT_GAME_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_RIOT_GAME_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        Grid.Row="5"
                                        Grid.Column="1"
                                        Name="RiotGameIdTextBox"
                                        Margin="5"
                                        VerticalContentAlignment="Center"
                                        Visibility="Collapsed"/>

                                    <StackPanel
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        Name="ExecutablePathLabelPanel"
                                        ToolTip="[TOOLTIP_EXECUTABLE_PATH]">
                                        <Label
                                            Name="ExecutablePathLabel"
                                            Content="[EXECUTABLE_PATH_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_EXECUTABLE_PATH]"/>
                                    </StackPanel>
                                    <Grid
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        Visibility="Collapsed"
                                        Name="ExecutablePathInputGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition
                                                Width="*"/>
                                            <ColumnDefinition
                                                Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox
                                            Grid.Column="0"
                                            Name="ExecutablePathTextBox"
                                            Margin="5"
                                            VerticalContentAlignment="Center"/>
                                        <Button
                                            Grid.Column="1"
                                            Name="BrowseExecutablePathButton"
                                            Content="[BROWSE_BUTTON]"
                                            Width="70"
                                            Height="25"
                                            Margin="5,0,5,0"/>
                                    </Grid>

                                    <StackPanel
                                        Grid.Row="7"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_PROCESS_NAME]">
                                        <Label
                                            Name="ProcessNameLabel"
                                            Content="[PROCESS_NAME_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_PROCESS_NAME]"/>
                                    </StackPanel>
                                    <TextBox
                                        Grid.Row="7"
                                        Grid.Column="1"
                                        Name="ProcessNameTextBox"
                                        Margin="5"
                                        VerticalContentAlignment="Center"/>
