                                    <Button Grid.Row="2"
                                            Grid.Column="2"
                                            Name="BrowseRiotPathButton"
                                            Content="[BROWSE_BUTTON]"
                                            Width="70"
                                            Height="25"/>

                                    <Label Grid.Row="3"
                                           Grid.Column="0"
                                           Name="ObsPathLabel"
                                           Content="obs64.exe Path:"
                                           VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="3"
                                             Grid.Column="1"
                                             Name="ObsPathTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>
                                    <Button Grid.Row="3"
                                            Grid.Column="2"
                                            Name="BrowseObsPathButton"
                                            Content="[BROWSE_BUTTON]"
                                            Width="70"
                                            Height="25"/>
                                </Grid>
                            </GroupBox>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Tab-specific Save Button -->
                    <Grid Grid.Row="1"
                          Background="#F8F8F8"
                          Margin="0,5,0,0">
                        <Button Name="SaveGlobalSettingsButton"
                                Content="[SAVE_BUTTON]"
                                Width="100"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"/>
                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>

    </DockPanel>
</Window>
