<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="[WINDOW_TITLE]"
        Height="650"
        Width="900"
        MinHeight="550"
        MinWidth="700"
        FontFamily="Yu Gothic UI, Segoe UI Variable, Segoe UI"
        ToolTipService.InitialShowDelay="300"
        ToolTipService.ShowDuration="10000"
        ToolTipService.BetweenShowDelay="100">

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="[HELP_MENU_HEADER]">
                <MenuItem Name="CheckUpdateMenuItem"
                          Header="[CHECK_UPDATE_MENU_ITEM]"/>
                <Separator/>
                <MenuItem Name="AboutMenuItem"
                          Header="[ABOUT_MENU_ITEM]"/>
            </MenuItem>
        </Menu>

        <!-- Footer with reduced height -->
        <Grid DockPanel.Dock="Bottom"
              Height="35">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20,0">
                <TextBlock Name="VersionLabel"
                           Text="[VERSION_LABEL]"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="#666"/>
                <TextBlock Name="VersionText"
                           Text="1.0.1-alpha"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="#666"
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main TabControl -->
        <TabControl Name="MainTabControl"
                    Margin="10">

            <!-- Game Launcher Tab (New Primary Tab) -->
            <TabItem Header="[GAME_LAUNCHER_TAB_HEADER]"
                     Name="GameLauncherTab">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section -->
                    <Grid Grid.Row="0"
                          Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    VerticalAlignment="Center">
                            <TextBlock Name="LauncherWelcomeText"
                                       Text="[LAUNCHER_WELCOME_TEXT]"
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Name="LauncherSubtitleText"
                                       Text="[LAUNCHER_SUBTITLE_TEXT]"
                                       FontSize="12"
                                       Foreground="#666"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Name="RefreshGameListButton"
                                Content="[REFRESH_BUTTON]"
                                Width="100"
                                Height="30"
                                VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Game List Section -->
                    <ScrollViewer Grid.Row="1"
                                  Margin="20,0,20,10"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl Name="GameLauncherList"
                                      Margin="0,10">
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Footer Section -->
                    <Grid Grid.Row="2"
                          Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Vertical"
                                    VerticalAlignment="Center"
                                    Margin="20,0">
                            <TextBlock Name="LauncherStatusText"
                                       Text="[READY_TO_LAUNCH]"
                                       FontSize="12"
                                       Foreground="#666"/>
                            <TextBlock Name="LauncherHintText"
                                       Text="[LAUNCHER_HINT_TEXT]"
                                       FontSize="10"
                                       Foreground="#888"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="0,0,20,0">
                            <Button Name="AddNewGameButton"
                                    Content="[ADD_GAME_BUTTON]"
                                    Width="100"
                                    Height="35"
                                    Margin="5"/>
                            <Button Name="OpenConfigButton"
                                    Content="[OPEN_CONFIG_BUTTON]"
                                    Width="100"
                                    Height="35"
                                    Margin="5"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Game Settings Tab -->
            <TabItem Header="[GAMES_TAB_HEADER]"
                     Name="GamesTab">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Games List -->
                        <Grid Grid.Column="0"
                              Margin="10,0,5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="55"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0"
                                   Name="GamesListLabel"
                                   Content="Games List"
                                   FontWeight="Bold"/>
                            <ListBox Grid.Row="1"
                                     Name="GamesList"
                                     Margin="0,5,0,5"/>
                            <StackPanel Grid.Row="2"
                                        Orientation="Vertical"
                                        HorizontalAlignment="Center">
                                <!-- Main action buttons -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,5">
                                    <Button Name="AddGameButton"
                                            Content="Add New..."
                                            Width="65"
                                            Height="22"
                                            Margin="2"/>
                                    <Button Name="DuplicateGameButton"
                                            Content="[DUPLICATE_BUTTON]"
                                            Width="55"
                                            Height="22"
                                            Margin="2"/>
                                    <Button Name="DeleteGameButton"
                                            Content="Delete"
                                            Width="50"
                                            Height="22"
                                            Margin="2"/>
                                </StackPanel>

                                <!-- Game order buttons -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,0">
                                    <Button Name="MoveGameTopButton"
                                            Content="[moveTopButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            ToolTip="[moveTopTooltip]"
                                            FontSize="10"/>
                                    <Button Name="MoveGameUpButton"
                                            Content="[moveUpButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            ToolTip="[moveUpTooltip]"
                                            FontSize="10"/>
                                    <Button Name="MoveGameDownButton"
                                            Content="[moveDownButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            ToolTip="[moveDownTooltip]"
                                            FontSize="10"/>
                                    <Button Name="MoveGameBottomButton"
                                            Content="[moveBottomButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            ToolTip="[moveBottomTooltip]"
                                            FontSize="10"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Game Details -->
                        <ScrollViewer Grid.Column="1"
                                      VerticalScrollBarVisibility="Auto">
                            <Grid Margin="5,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Name="GameDetailsLabel"
                                       Content="Selected Game Details"
                                       FontWeight="Bold"
                                       FontSize="14"/>

                                <Grid Grid.Row="1"
                                      Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Name="GameIdLabel"
                                           Content="Game ID:"
                                           VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0"
                                             Grid.Column="1"
                                             Name="GameIdTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>

                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Name="GameNameLabel"
                                           Content="Display Name:"
                                           VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="1"
                                             Grid.Column="1"
                                             Name="GameNameTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>

                                    <Label Grid.Row="2"
                                           Grid.Column="0"
                                           Name="PlatformLabel"
                                           Content="Platform:"
                                           VerticalAlignment="Center"/>
                                    <ComboBox Grid.Row="2"
                                              Grid.Column="1"
                                              Name="PlatformComboBox"
                                              Margin="5">
                                        <ComboBoxItem Content="[STANDALONE_PLATFORM]"
                                                      Tag="standalone"/>
                                        <ComboBoxItem Content="[STEAM_PLATFORM]"
                                                      Tag="steam"/>
                                        <ComboBoxItem Content="[EPIC_PLATFORM]"
                                                      Tag="epic"/>
                                        <ComboBoxItem Content="[RIOT_PLATFORM]"
                                                      Tag="riot"/>
                                    </ComboBox>

                                    <StackPanel Grid.Row="3"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_STEAM_APP_ID]">
                                        <Label Name="SteamAppIdLabel"
                                               Content="Steam AppID:"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="?"
                                                   FontWeight="Bold"
                                                   Foreground="#0078D4"
                                                   Margin="3,0,0,0"
                                                   VerticalAlignment="Center"
                                                   ToolTip="[TOOLTIP_STEAM_APP_ID]"/>
                                    </StackPanel>
                                    <TextBox Grid.Row="3"
                                             Grid.Column="1"
                                             Name="SteamAppIdTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>

                                    <StackPanel Grid.Row="4"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Visibility="Collapsed"
                                                ToolTip="[TOOLTIP_EPIC_GAME_ID]">
                                        <Label Name="EpicGameIdLabel"
                                               Content="Epic GameID:"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="?"
                                                   FontWeight="Bold"
                                                   Foreground="#0078D4"
                                                   Margin="3,0,0,0"
                                                   VerticalAlignment="Center"
                                                   ToolTip="[TOOLTIP_EPIC_GAME_ID]"/>
                                    </StackPanel>
                                    <TextBox Grid.Row="4"
                                             Grid.Column="1"
                                             Name="EpicGameIdTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"
                                             Visibility="Collapsed"/>

                                    <StackPanel Grid.Row="5"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Visibility="Collapsed"
                                                ToolTip="[TOOLTIP_RIOT_GAME_ID]">
                                        <Label Name="RiotGameIdLabel"
                                               Content="Riot GameID:"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="?"
                                                   FontWeight="Bold"
                                                   Foreground="#0078D4"
                                                   Margin="3,0,0,0"
                                                   VerticalAlignment="Center"
                                                   ToolTip="[TOOLTIP_RIOT_GAME_ID]"/>
                                    </StackPanel>
                                    <TextBox Grid.Row="5"
                                             Grid.Column="1"
                                             Name="RiotGameIdTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"
                                             Visibility="Collapsed"/>

                                    <StackPanel Grid.Row="6"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Visibility="Collapsed"
                                                Name="ExecutablePathLabelPanel"
                                                ToolTip="[TOOLTIP_EXECUTABLE_PATH]">
                                        <Label Name="ExecutablePathLabel"
                                               Content="Executable Path:"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="?"
                                                   FontWeight="Bold"
                                                   Foreground="#0078D4"
                                                   Margin="3,0,0,0"
                                                   VerticalAlignment="Center"
                                                   ToolTip="[TOOLTIP_EXECUTABLE_PATH]"/>
                                    </StackPanel>
                                    <Grid Grid.Row="6"
                                          Grid.Column="1"
                                          Visibility="Collapsed"
                                          Name="ExecutablePathInputGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Name="ExecutablePathTextBox"
                                                 Margin="5"
                                                 VerticalContentAlignment="Center"/>
                                        <Button Grid.Column="1"
                                                Name="BrowseExecutablePathButton"
                                                Content="[BROWSE_BUTTON]"
                                                Width="70"
                                                Height="25"
                                                Margin="5,0,5,0"/>
                                    </Grid>

                                    <StackPanel Grid.Row="7"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_PROCESS_NAME]">
                                        <Label Name="ProcessNameLabel"
                                               Content="Process Name:"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="?"
                                                   FontWeight="Bold"
                                                   Foreground="#0078D4"
                                                   Margin="3,0,0,0"
                                                   VerticalAlignment="Center"
                                                   ToolTip="[TOOLTIP_PROCESS_NAME]"/>
                                    </StackPanel>
                                    <TextBox Grid.Row="7"
                                             Grid.Column="1"
                                             Name="ProcessNameTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>
                                </Grid>

                                <Label Grid.Row="2"
                                       Name="AppsToManageLabel"
                                       Content="Apps to Manage:"
                                       FontWeight="Bold"
                                       Margin="0,10,0,5"/>
                                <StackPanel Grid.Row="3"
                                            Name="AppsToManagePanel"
                                            Margin="10,0"/>

                                <Grid Grid.Row="4"
                                      Margin="0,20,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Column="0"
                                           Name="LauncherTypeLabel2"
                                           Content="Launcher Type:"
                                           VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                Margin="5">
                                        <ComboBox Name="GameLauncherTypeCombo"
                                                  Width="200"
                                                  HorizontalAlignment="Left">
                                            <ComboBoxItem Content="[ENHANCED_SHORTCUTS]"
                                                          Tag="lnk"
                                                          IsSelected="True"/>
                                            <ComboBoxItem Content="[TRADITIONAL_BATCH]"
                                                          Tag="bat"/>
                                        </ComboBox>
                                        <Button Name="GenerateLaunchersButton"
                                                Content="[GENERATE_LAUNCHERS]"
                                                Width="130"
                                                Height="25"
                                                Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                    <!-- Tab-specific Save Button -->
                    <Grid Grid.Row="1"
                          Background="#F8F8F8"
                          Margin="0,5,0,0">
                        <Button Name="SaveGameSettingsButton"
                                Content="[SAVE_BUTTON]"
                                Width="100"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Managed Apps Tab -->
            <TabItem Header="[MANAGED_APPS_TAB_HEADER]"
                     Name="ManagedAppsTab">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Apps List -->
                        <Grid Grid.Column="0"
                              Margin="10,0,5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="55"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0"
                                   Name="AppsListLabel"
                                   Content="Apps List"
                                   FontWeight="Bold"/>
                            <ListBox Grid.Row="1"
                                     Name="ManagedAppsList"
                                     Margin="0,5,0,5"/>
                            <StackPanel Grid.Row="2"
                                        Orientation="Vertical"
                                        HorizontalAlignment="Center">
                                <!-- Main action buttons -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,5">
                                    <Button Name="AddAppButton"
                                            Content="Add New..."
                                            Width="65"
                                            Height="22"
                                            Margin="2"/>
                                    <Button Name="DuplicateAppButton"
                                            Content="[DUPLICATE_BUTTON]"
                                            Width="55"
                                            Height="22"
                                            Margin="2"/>
                                    <Button Name="DeleteAppButton"
                                            Content="Delete"
                                            Width="50"
                                            Height="22"
                                            Margin="2"/>
                                </StackPanel>

                                <!-- App order buttons -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,0">
                                    <Button Name="MoveAppTopButton"
                                            Content="[moveTopButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            ToolTip="[moveTopTooltip]"
                                            FontSize="10"/>
                                    <Button Name="MoveAppUpButton"
                                            Content="[moveUpButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            ToolTip="[moveUpTooltip]"
                                            FontSize="10"/>
                                    <Button Name="MoveAppDownButton"
                                            Content="[moveDownButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            ToolTip="[moveDownTooltip]"
                                            FontSize="10"/>
                                    <Button Name="MoveAppBottomButton"
                                            Content="[moveBottomButton]"
                                            Width="41"
                                            Height="22"
                                            Margin="2"
                                            ToolTip="[moveBottomTooltip]"
                                            FontSize="10"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- App Details -->
                        <ScrollViewer Grid.Column="1"
                                      VerticalScrollBarVisibility="Auto">
                            <Grid Margin="5,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Name="AppDetailsLabel"
                                       Content="Selected App Details"
                                       FontWeight="Bold"
                                       FontSize="14"/>

                                <Grid Grid.Row="1"
                                      Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Name="AppIdLabel"
                                           Content="App ID:"
                                           VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0"
                                             Grid.Column="1"
                                             Name="AppIdTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>

                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Name="AppPathLabel"
                                           Content="Executable Path:"
                                           VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="1"
                                             Grid.Column="1"
                                             Name="AppPathTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>
                                    <Button Grid.Row="1"
                                            Grid.Column="2"
                                            Name="BrowseAppPathButton"
                                            Content="[BROWSE_BUTTON]"
                                            Width="70"
                                            Height="25"/>

                                    <StackPanel Grid.Row="2"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_PROCESS_NAME]">
                                        <Label Name="AppProcessNameLabel"
                                               Content="Process Name:"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="?"
                                                   FontWeight="Bold"
                                                   Foreground="#0078D4"
                                                   Margin="3,0,0,0"
                                                   VerticalAlignment="Center"
                                                   ToolTip="[TOOLTIP_PROCESS_NAME]"/>
                                    </StackPanel>
                                    <TextBox Grid.Row="2"
                                             Grid.Column="1"
                                             Name="AppProcessNameTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>

                                    <Label Grid.Row="3"
                                           Grid.Column="0"
                                           Name="GameStartActionLabel"
                                           Content="Game Start Action:"
                                           VerticalAlignment="Center"/>
                                    <ComboBox Grid.Row="3"
                                              Grid.Column="1"
                                              Name="GameStartActionCombo"
                                              Margin="5"/>

                                    <Label Grid.Row="4"
                                           Grid.Column="0"
                                           Name="GameEndActionLabel"
                                           Content="Game End Action:"
                                           VerticalAlignment="Center"/>
                                    <ComboBox Grid.Row="4"
                                              Grid.Column="1"
                                              Name="GameEndActionCombo"
                                              Margin="5"/>

                                    <Label Grid.Row="5"
                                           Grid.Column="0"
                                           Name="AppArgumentsLabel"
                                           Content="Launch Arguments:"
                                           VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="5"
                                             Grid.Column="1"
                                             Name="AppArgumentsTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>

                                    <StackPanel Grid.Row="6"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_TERMINATION_METHOD]">
                                        <Label Name="TerminationMethodLabel"
                                               Content="Termination Method:"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="?"
                                                   FontWeight="Bold"
                                                   Foreground="#0078D4"
                                                   Margin="3,0,0,0"
                                                   VerticalAlignment="Center"
                                                   ToolTip="[TOOLTIP_TERMINATION_METHOD]"/>
                                    </StackPanel>
                                    <ComboBox Grid.Row="6"
                                              Grid.Column="1"
                                              Name="TerminationMethodCombo"
                                              Margin="5"/>

                                    <StackPanel Grid.Row="7"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                ToolTip="[TOOLTIP_GRACEFUL_TIMEOUT]">
                                        <Label Name="GracefulTimeoutLabel"
                                               Content="Graceful Timeout (ms):"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="?"
                                                   FontWeight="Bold"
                                                   Foreground="#0078D4"
                                                   Margin="3,0,0,0"
                                                   VerticalAlignment="Center"
                                                   ToolTip="[TOOLTIP_GRACEFUL_TIMEOUT]"/>
                                    </StackPanel>
                                    <TextBox Grid.Row="7"
                                             Grid.Column="1"
                                             Name="GracefulTimeoutTextBox"
                                             Margin="5"
                                             VerticalContentAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                    <!-- Tab-specific Save Button -->
                    <Grid Grid.Row="1"
                          Background="#F8F8F8"
                          Margin="0,5,0,0">
                        <Button Name="SaveManagedAppsButton"
                                Content="[SAVE_BUTTON]"
                                Width="100"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0"
                                Background="#0078D4"
                                Foreground="White"
                                BorderThickness="0"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Global Settings Tab -->
            <TabItem Header="[GLOBAL_SETTINGS_TAB_HEADER]"
                     Name="GlobalSettingsTab">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">

                            <!-- General Settings Group -->
                            <GroupBox Name="GeneralSettingsGroup"
                                      Header="[GENERAL_SETTINGS_GROUP]"
                                      Margin="0,0,0,20">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Name="LanguageLabel"
                                           Content="Display Language:"
                                           VerticalAlignment="Center"/>
                                    <ComboBox Grid.Row="0"
                                              Grid.Column="1"
                                              Name="LanguageCombo"
                                              Margin="5"
                                              Width="200"
                                              HorizontalAlignment="Left"/>

                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Name="LauncherTypeLabel"
                                           Content="Launcher Type:"
                                           VerticalAlignment="Center"/>
                                    <ComboBox Grid.Row="1"
                                              Grid.Column="1"
                                              Name="LauncherTypeCombo"
                                              Margin="5"
