<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="[WINDOW_TITLE]"
    Width="900"
    Height="650"
    MinWidth="700"
    MinHeight="550"
    FontFamily="Yu Gothic UI, Segoe UI Variable, Segoe UI"
    ToolTipService.InitialShowDelay="300"
    ToolTipService.ShowDuration="10000"
    ToolTipService.BetweenShowDelay="100">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem
                x:Name="HelpMenu"
                Header="[HELP_MENU_HEADER]">
                <MenuItem
                    x:Name="CheckUpdateMenuItem"
                    Header="[CHECK_UPDATE_MENU_ITEM]"/>
                <Separator/>
                <MenuItem
                    x:Name="AboutMenuItem"
                    Header="[ABOUT_MENU_ITEM]"/>
            </MenuItem>
        </Menu>

        <Grid
            DockPanel.Dock="Bottom"
            Height="35">
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Center"
                Margin="20,0">
                <TextBlock
                    x:Name="VersionLabel"
                    Text="[VERSION_LABEL]"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="#666"/>
                <TextBlock
                    x:Name="VersionText"
                    Text="1.0.1-alpha"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="#666"
                    Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <TabControl
            x:Name="MainTabControl"
            Margin="10">

            <TabItem
                x:Name="GameLauncherTab"
                Header="[GAME_LAUNCHER_TAB_HEADER]">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            VerticalAlignment="Center">
                            <TextBlock
                                x:Name="LauncherWelcomeText"
                                Text="[LAUNCHER_WELCOME_TEXT]"
                                FontSize="16"
                                FontWeight="Bold"/>
                            <TextBlock
                                x:Name="LauncherSubtitleText"
                                Text="[LAUNCHER_SUBTITLE_TEXT]"
                                FontSize="12"
                                Foreground="#666"
                                Margin="0,2,0,0"/>
                        </StackPanel>

                        <Button
                            x:Name="RefreshGameListButton"
                            Content="[REFRESH_BUTTON]"
                            Grid.Column="1"
                            Width="100"
                            Height="30"
                            VerticalAlignment="Center"/>
                    </Grid>

                    <ScrollViewer
                        Grid.Row="1"
                        VerticalScrollBarVisibility="Auto"
                        Margin="20,0,20,10">
                        <ItemsControl
                            x:Name="GameLauncherList"
                            Margin="0,10"/>
                    </ScrollViewer>

                    <Grid
                        Grid.Row="2"
                        Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="20,0">
                            <TextBlock
                                x:Name="LauncherStatusText"
                                Text="[READY_TO_LAUNCH]"
                                FontSize="12"
                                Foreground="#666"/>
                            <TextBlock
                                x:Name="LauncherHintText"
                                Text="[LAUNCHER_HINT_TEXT]"
                                FontSize="10"
                                Foreground="#888"
                                Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                            <Button
                                x:Name="AddNewGameButton"
                                Content="[ADD_GAME_BUTTON]"
                                Width="100"
                                Height="35"
                                Margin="5"/>
                            <Button
                                x:Name="OpenConfigButton"
                                Content="[OPEN_CONFIG_BUTTON]"
                                Width="100"
                                Height="35"
                                Margin="5"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem
                x:Name="GamesTab"
                Header="[GAMES_TAB_HEADER]">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid
                            Grid.Column="0"
                            Margin="10,0,5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="55"/>
                            </Grid.RowDefinitions>

                            <Label
                                x:Name="GamesListLabel"
                                Content="[GAMES_LIST_LABEL]"
                                Grid.Row="0"
                                FontWeight="Bold"/>
                            <ListBox
                                x:Name="GamesList"
                                Grid.Row="1"
                                Margin="0,5,0,5"/>
                            <StackPanel
                                Grid.Row="2"
                                Orientation="Vertical"
                                HorizontalAlignment="Center">
                                <StackPanel
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,5">
                                    <Button
                                        x:Name="AddGameButton"
                                        Content="[ADD_BUTTON]"
                                        Width="65"
                                        Height="22"
                                        Margin="2"/>
                                    <Button
                                        x:Name="DuplicateGameButton"
                                        Content="[DUPLICATE_BUTTON]"
                                        Width="55"
                                        Height="22"
                                        Margin="2"/>
                                    <Button
                                        x:Name="DeleteGameButton"
                                        Content="[DELETE_BUTTON]"
                                        Width="50"
                                        Height="22"
                                        Margin="2"/>
                                </StackPanel>
                                <StackPanel
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                                    <Button
                                        x:Name="MoveGameTopButton"
                                        Content="[moveTopButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        FontSize="10"
                                        ToolTip="[moveTopTooltip]"/>
                                    <Button
                                        x:Name="MoveGameUpButton"
                                        Content="[moveUpButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        FontSize="10"
                                        ToolTip="[moveUpTooltip]"/>
                                    <Button
                                        x:Name="MoveGameDownButton"
                                        Content="[moveDownButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        FontSize="10"
                                        ToolTip="[moveDownTooltip]"/>
                                    <Button
                                        x:Name="MoveGameBottomButton"
                                        Content="[moveBottomButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        FontSize="10"
                                        ToolTip="[moveBottomTooltip]"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <ScrollViewer
                            Grid.Column="1"
                            VerticalScrollBarVisibility="Auto">
                            <Grid Margin="5,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label
                                    x:Name="GameDetailsLabel"
                                    Content="[GAME_DETAILS_LABEL]"
                                    Grid.Row="0"
                                    FontWeight="Bold"
                                    FontSize="14"/>

                                <Grid
                                    Grid.Row="1"
                                    Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel
                                        x:Name="GameIdLabelPanel"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_GAME_ID]">
                                        <Label
                                            x:Name="GameIdLabel"
                                            Content="[GAME_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="GameIdTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_GAME_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        x:Name="GameIdTextBox"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"/>

                                    <StackPanel
                                        x:Name="GameNameLabelPanel"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_DISPLAY_NAME]">
                                        <Label
                                            x:Name="GameNameLabel"
                                            Content="[GAME_NAME_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="GameNameTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_DISPLAY_NAME]"/>
                                    </StackPanel>
                                    <TextBox
                                        x:Name="GameNameTextBox"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"/>

                                    <Label
                                        x:Name="PlatformLabel"
                                        Content="[PLATFORM_LABEL]"
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"/>
                                    <ComboBox
                                        x:Name="PlatformComboBox"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="5">
                                        <ComboBoxItem
                                            x:Name="PlatformStandaloneItem"
                                            Content="[STANDALONE_PLATFORM]"
                                            Tag="standalone"/>
                                        <ComboBoxItem
                                            x:Name="PlatformSteamItem"
                                            Content="[STEAM_PLATFORM]"
                                            Tag="steam"/>
                                        <ComboBoxItem
                                            x:Name="PlatformEpicItem"
                                            Content="[EPIC_PLATFORM]"
                                            Tag="epic"/>
                                        <ComboBoxItem
                                            x:Name="PlatformRiotItem"
                                            Content="[RIOT_PLATFORM]"
                                            Tag="riot"/>
                                    </ComboBox>

                                    <StackPanel
                                        x:Name="SteamAppIdLabelPanel"
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_STEAM_APP_ID]">
                                        <Label
                                            x:Name="SteamAppIdLabel"
                                            Content="[STEAM_APP_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="SteamAppIdTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_STEAM_APP_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        x:Name="SteamAppIdTextBox"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"/>

                                    <StackPanel
                                        x:Name="EpicGameIdLabelPanel"
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        ToolTip="[TOOLTIP_EPIC_GAME_ID]">
                                        <Label
                                            x:Name="EpicGameIdLabel"
                                            Content="[EPIC_GAME_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="EpicGameIdTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_EPIC_GAME_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        x:Name="EpicGameIdTextBox"
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"
                                        Visibility="Collapsed"/>

                                    <StackPanel
                                        x:Name="RiotGameIdLabelPanel"
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        ToolTip="[TOOLTIP_RIOT_GAME_ID]">
                                        <Label
                                            x:Name="RiotGameIdLabel"
                                            Content="[RIOT_GAME_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="RiotGameIdTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_RIOT_GAME_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        x:Name="RiotGameIdTextBox"
                                        Grid.Row="5"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"
                                        Visibility="Collapsed"/>

                                    <StackPanel
                                        x:Name="ExecutablePathLabelPanel"
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed"
                                        ToolTip="[TOOLTIP_EXECUTABLE_PATH]">
                                        <Label
                                            x:Name="ExecutablePathLabel"
                                            Content="[EXECUTABLE_PATH_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="ExecutablePathTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_EXECUTABLE_PATH]"/>
                                    </StackPanel>
                                    <Grid
                                        x:Name="ExecutablePathInputGrid"
                                        Grid.Row="6"
                                        Grid.Column="1"
                                        Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox
                                            x:Name="ExecutablePathTextBox"
                                            Grid.Column="0"
                                            VerticalContentAlignment="Center"
                                            Margin="5"/>
                                        <Button
                                            x:Name="BrowseExecutablePathButton"
                                            Content="[BROWSE_BUTTON]"
                                            Grid.Column="1"
                                            Width="70"
                                            Height="25"
                                            Margin="5,0,5,0"/>
                                    </Grid>

                                    <StackPanel
                                        x:Name="ProcessNameLabelPanel"
                                        Grid.Row="7"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_PROCESS_NAME]">
                                        <Label
                                            x:Name="ProcessNameLabel"
                                            Content="[PROCESS_NAME_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="ProcessNameTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_PROCESS_NAME]"/>
                                    </StackPanel>
                                    <TextBox
                                        x:Name="ProcessNameTextBox"
                                        Grid.Row="7"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"/>
                                </Grid>

                                <Label
                                    x:Name="AppsToManageLabel"
                                    Content="[APPS_TO_MANAGE_LABEL]"
                                    Grid.Row="2"
                                    FontWeight="Bold"
                                    Margin="0,10,0,5"/>
                                <StackPanel
                                    x:Name="AppsToManagePanel"
                                    Grid.Row="3"
                                    Margin="10,0"/>

                                <Grid
                                    Grid.Row="4"
                                    Margin="0,20,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        x:Name="LauncherTypeLabel2"
                                        Content="[LAUNCHER_TYPE_LABEL]"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"/>
                                    <StackPanel
                                        Grid.Column="1"
                                        Orientation="Horizontal"
                                        Margin="5">
                                        <ComboBox
                                            x:Name="GameLauncherTypeCombo"
                                            Width="200"
                                            HorizontalAlignment="Left">
                                            <ComboBoxItem
                                                x:Name="GameLauncherTypeEnhancedItem"
                                                Content="[ENHANCED_SHORTCUTS]"
                                                Tag="lnk"
                                                IsSelected="True"/>
                                            <ComboBoxItem
                                                x:Name="GameLauncherTypeTraditionalItem"
                                                Content="[TRADITIONAL_BATCH]"
                                                Tag="bat"/>
                                        </ComboBox>
                                        <Button
                                            x:Name="GenerateLaunchersButton"
                                            Content="[GENERATE_LAUNCHERS]"
                                            Width="130"
                                            Height="25"
                                            Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                    <Grid
                        Grid.Row="1"
                        Background="#F8F8F8"
                        Margin="0,5,0,0">
                        <Button
                            x:Name="SaveGameSettingsButton"
                            Content="[SAVE_BUTTON]"
                            Width="100"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0"
                            Background="#0078D4"
                            Foreground="White"
                            BorderThickness="0"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem
                x:Name="ManagedAppsTab"
                Header="[MANAGED_APPS_TAB_HEADER]">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid
                            Grid.Column="0"
                            Margin="10,0,5,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="55"/>
                            </Grid.RowDefinitions>

                            <Label
                                x:Name="AppsListLabel"
                                Content="[APPS_LIST_LABEL]"
                                Grid.Row="0"
                                FontWeight="Bold"/>
                            <ListBox
                                x:Name="ManagedAppsList"
                                Grid.Row="1"
                                Margin="0,5,0,5"/>
                            <StackPanel
                                Grid.Row="2"
                                Orientation="Vertical"
                                HorizontalAlignment="Center">
                                <StackPanel
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,5">
                                    <Button
                                        x:Name="AddAppButton"
                                        Content="[ADD_BUTTON]"
                                        Width="65"
                                        Height="22"
                                        Margin="2"/>
                                    <Button
                                        x:Name="DuplicateAppButton"
                                        Content="[DUPLICATE_BUTTON]"
                                        Width="55"
                                        Height="22"
                                        Margin="2"/>
                                    <Button
                                        x:Name="DeleteAppButton"
                                        Content="[DELETE_BUTTON]"
                                        Width="50"
                                        Height="22"
                                        Margin="2"/>
                                </StackPanel>
                                <StackPanel
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                                    <Button
                                        x:Name="MoveAppTopButton"
                                        Content="[moveTopButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        FontSize="10"
                                        ToolTip="[moveTopTooltip]"/>
                                    <Button
                                        x:Name="MoveAppUpButton"
                                        Content="[moveUpButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        FontSize="10"
                                        ToolTip="[moveUpTooltip]"/>
                                    <Button
                                        x:Name="MoveAppDownButton"
                                        Content="[moveDownButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        FontSize="10"
                                        ToolTip="[moveDownTooltip]"/>
                                    <Button
                                        x:Name="MoveAppBottomButton"
                                        Content="[moveBottomButton]"
                                        Width="41"
                                        Height="22"
                                        Margin="2"
                                        FontSize="10"
                                        ToolTip="[moveBottomTooltip]"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <ScrollViewer
                            Grid.Column="1"
                            VerticalScrollBarVisibility="Auto">
                            <Grid Margin="5,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label
                                    x:Name="AppDetailsLabel"
                                    Content="[APP_DETAILS_LABEL]"
                                    Grid.Row="0"
                                    FontWeight="Bold"
                                    FontSize="14"/>

                                <Grid
                                    Grid.Row="1"
                                    Margin="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel
                                        x:Name="AppIdLabelPanel"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_APP_ID]">
                                        <Label
                                            x:Name="AppIdLabel"
                                            Content="[APP_ID_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="AppIdTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_APP_ID]"/>
                                    </StackPanel>
                                    <TextBox
                                        x:Name="AppIdTextBox"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"/>

                                    <Label
                                        x:Name="AppPathLabel"
                                        Content="[APP_PATH_LABEL]"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"/>
                                    <TextBox
                                        x:Name="AppPathTextBox"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"/>
                                    <Button
                                        x:Name="BrowseAppPathButton"
                                        Content="[BROWSE_BUTTON]"
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Width="70"
                                        Height="25"/>

                                    <StackPanel
                                        x:Name="AppProcessNameLabelPanel"
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_PROCESS_NAME]">
                                        <Label
                                            x:Name="AppProcessNameLabel"
                                            Content="[PROCESS_NAME_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="AppProcessNameTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_PROCESS_NAME]"/>
                                    </StackPanel>
                                    <TextBox
                                        x:Name="AppProcessNameTextBox"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        VerticalContentAlignment="Center"
                                        Margin="5"/>

                                    <StackPanel
                                        x:Name="GameStartActionLabelPanel"
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        ToolTip="[TOOLTIP_GAME_ACTIONS]">
                                        <Label
                                            x:Name="GameStartActionLabel"
                                            Content="[GAME_START_ACTION_LABEL]"
                                            VerticalAlignment="Center"/>
                                        <TextBlock
                                            x:Name="GameStartActionTooltip"
                                            Text="?"
                                            FontWeight="Bold"
                                            Foreground="#0078D4"
                                            Margin="3,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip="[TOOLTIP_GAME_ACTIONS]"/>
                                    </StackPanel>
                                    <ComboBox
                                        x:Name="GameStartActionCombo"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Margin="5"/>

                                    <StackPanel
                                        x:Name="GameEndActionLabelPanel"
                                        Grid.Row="4"
