<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Focus Game Deck - 設定エディタ" 
        Height="650" 
        Width="900" 
        MinHeight="550" 
        MinWidth="700">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        
        <!-- Main TabControl -->
        <TabControl Grid.Row="0" Name="MainTabControl" Margin="10">
            
            <!-- Game Settings Tab -->
            <TabItem Header="ゲーム設定" Name="GamesTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Games List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Name="GamesListLabel" Content="ゲームリスト" FontWeight="Bold"/>
                        <ListBox Grid.Row="1" Name="GamesList" Margin="0,5,5,5"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Name="AddGameButton" Content="新規追加..." Width="80" Height="25" Margin="5"/>
                            <Button Name="DeleteGameButton" Content="削除" Width="60" Height="25" Margin="5"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Game Details -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0" Name="GameDetailsLabel" Content="選択したゲームの詳細" FontWeight="Bold" FontSize="14"/>
                            
                            <Grid Grid.Row="1" Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Name="GameIdLabel" Content="Game ID:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="GameIdTextBox" Margin="5"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Name="GameNameLabel" Content="表示名:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Name="GameNameTextBox" Margin="5"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Name="PlatformLabel" Content="プラットフォーム:" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" Name="PlatformComboBox" Margin="5">
                                    <ComboBoxItem Content="Steam" Tag="steam"/>
                                    <ComboBoxItem Content="Epic Games" Tag="epic"/>
                                    <ComboBoxItem Content="Riot Client" Tag="riot"/>
                                </ComboBox>
                                
                                <Label Grid.Row="3" Grid.Column="0" Name="SteamAppIdLabel" Content="Steam AppID:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Name="SteamAppIdTextBox" Margin="5"/>
                                
                                <Label Grid.Row="4" Grid.Column="0" Name="EpicGameIdLabel" Content="Epic GameID:" VerticalAlignment="Center" Visibility="Collapsed"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Name="EpicGameIdTextBox" Margin="5" Visibility="Collapsed"/>
                                
                                <Label Grid.Row="5" Grid.Column="0" Name="RiotGameIdLabel" Content="Riot GameID:" VerticalAlignment="Center" Visibility="Collapsed"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Name="RiotGameIdTextBox" Margin="5" Visibility="Collapsed"/>
                                
                                <Label Grid.Row="6" Grid.Column="0" Name="ProcessNameLabel" Content="プロセス名:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="6" Grid.Column="1" Name="ProcessNameTextBox" Margin="5"/>
                            </Grid>
                            
                            <Label Grid.Row="2" Name="AppsToManageLabel" Content="管理するアプリ:" FontWeight="Bold" Margin="0,10,0,5"/>
                            <StackPanel Grid.Row="3" Name="AppsToManagePanel" Margin="10,0"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Managed Apps Tab -->
            <TabItem Header="管理アプリ設定" Name="ManagedAppsTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Apps List -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Name="AppsListLabel" Content="アプリリスト" FontWeight="Bold"/>
                        <ListBox Grid.Row="1" Name="ManagedAppsList" Margin="0,5,5,5"/>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Name="AddAppButton" Content="新規追加..." Width="80" Height="25" Margin="5"/>
                            <Button Name="DeleteAppButton" Content="削除" Width="60" Height="25" Margin="5"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- App Details -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0" Name="AppDetailsLabel" Content="選択したアプリの詳細" FontWeight="Bold" FontSize="14"/>
                            
                            <Grid Grid.Row="1" Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Name="AppIdLabel" Content="アプリID:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="AppIdTextBox" Margin="5"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Name="AppPathLabel" Content="実行ファイルパス:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Name="AppPathTextBox" Margin="5"/>
                                <Button Grid.Row="1" Grid.Column="2" Name="BrowseAppPathButton" Content="参照" Width="70" Height="25"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Name="AppProcessNameLabel" Content="プロセス名:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Name="AppProcessNameTextBox" Margin="5"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Name="GameStartActionLabel" Content="ゲーム開始時の動作:" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="3" Grid.Column="1" Name="GameStartActionCombo" Margin="5"/>
                                
                                <Label Grid.Row="4" Grid.Column="0" Name="GameEndActionLabel" Content="ゲーム終了時の動作:" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="4" Grid.Column="1" Name="GameEndActionCombo" Margin="5"/>
                                
                                <Label Grid.Row="5" Grid.Column="0" Name="AppArgumentsLabel" Content="起動引数:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Name="AppArgumentsTextBox" Margin="5"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Global Settings Tab -->
            <TabItem Header="グローバル設定" Name="GlobalSettingsTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        
                        <!-- OBS Settings Group -->
                        <GroupBox Name="ObsSettingsGroup" Header="OBS連携設定" Margin="0,0,0,20">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Name="HostLabel" Content="ホスト:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="ObsHostTextBox" Margin="5"/>
                                
                                <Label Grid.Row="0" Grid.Column="2" Name="PortLabel" Content="ポート:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="3" Name="ObsPortTextBox" Margin="5"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Name="PasswordLabel" Content="パスワード:" VerticalAlignment="Center"/>
                                <PasswordBox Grid.Row="1" Grid.Column="1" Name="ObsPasswordBox" Margin="5"/>
                                
                                <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Name="ReplayBufferCheckBox" 
                                         Content="ゲーム中にリプレイバッファを有効にする" VerticalAlignment="Center" Margin="5"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Paths Settings Group -->
                        <GroupBox Name="PathSettingsGroup" Header="パス設定" Margin="0,0,0,20">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Name="SteamPathLabel" Content="Steam.exeのパス:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Name="SteamPathTextBox" Margin="5"/>
                                <Button Grid.Row="0" Grid.Column="2" Name="BrowseSteamPathButton" Content="参照" Width="70" Height="25"/>
                                
                                <Label Grid.Row="1" Grid.Column="0" Name="EpicPathLabel" Content="Epic Games Launcherのパス:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Name="EpicPathTextBox" Margin="5"/>
                                <Button Grid.Row="1" Grid.Column="2" Name="BrowseEpicPathButton" Content="参照" Width="70" Height="25"/>
                                
                                <Label Grid.Row="2" Grid.Column="0" Name="RiotPathLabel" Content="Riot Clientのパス:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Name="RiotPathTextBox" Margin="5"/>
                                <Button Grid.Row="2" Grid.Column="2" Name="BrowseRiotPathButton" Content="参照" Width="70" Height="25"/>
                                
                                <Label Grid.Row="3" Grid.Column="0" Name="ObsPathLabel" Content="obs64.exeのパス:" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Name="ObsPathTextBox" Margin="5"/>
                                <Button Grid.Row="3" Grid.Column="2" Name="BrowseObsPathButton" Content="参照" Width="70" Height="25"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- General Settings Group -->
                        <GroupBox Name="GeneralSettingsGroup" Header="全体設定">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Row="0" Grid.Column="0" Name="LanguageLabel" Content="表示言語:" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" Name="LanguageCombo" Margin="5" Width="200" HorizontalAlignment="Left"/>
                            </Grid>
                        </GroupBox>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
        </TabControl>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
            <Button Name="SaveButton" Content="保存" Width="80" Height="30" Margin="10,0"/>
            <Button Name="CloseButton" Content="閉じる" Width="80" Height="30" Margin="10,0"/>
        </StackPanel>
        
    </Grid>
</Window>