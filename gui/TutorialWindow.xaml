<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="[tutorialWindowTitle]"
    Width="800"
    Height="600"
    MinWidth="700"
    MinHeight="500"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize"
    ShowInTaskbar="True"
    FontFamily="Yu Gothic UI, Segoe UI Variable, Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#2196F3"
                Padding="20,15">
            <StackPanel>
                <TextBlock
                    x:Name="TutorialTitle"
                    Text="[tutorialWelcomeTitle]"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    TextAlignment="Center"/>
                <TextBlock
                    x:Name="TutorialSubtitle"
                    Text="[tutorialWelcomeSubtitle]"
                    FontSize="14"
                    Foreground="White"
                    TextAlignment="Center"
                    Margin="0,5,0,0"
                    Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1"
                Padding="30,20"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Page indicator -->
                <TextBlock
                    x:Name="PageIndicator"
                    Grid.Row="0"
                    Text="1 / 5"
                    FontSize="12"
                    Foreground="#666"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10"/>

                <!-- Image and description container -->
                <ScrollViewer x:Name="ContentScrollViewer"
                              Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <!-- Screenshot image -->
                        <Border
                            x:Name="ScreenshotBorder"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,0,20"
                            HorizontalAlignment="Center"
                            MaxWidth="700">
                            <Image
                                x:Name="TutorialImage"
                                Stretch="Uniform"
                                MaxHeight="350"/>
                        </Border>

                        <!-- Description text -->
                        <TextBlock
                            x:Name="TutorialDescription"
                            Text="[tutorialDescriptionPlaceholder]"
                            FontSize="14"
                            TextWrapping="Wrap"
                            LineHeight="24"
                            Foreground="#333"
                            TextAlignment="Left"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Link to documentation -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">
                    <TextBlock
                        Text="[tutorialMoreInfo]"
                        FontSize="12"
                        Foreground="#666"
                        VerticalAlignment="Center"/>
                    <TextBlock
                        x:Name="DocumentationLink"
                        Text="[tutorialDocumentationLink]"
                        FontSize="12"
                        Foreground="#2196F3"
                        TextDecorations="Underline"
                        Cursor="Hand"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Navigation buttons -->
        <Border Grid.Row="2"
                Background="#F5F5F5"
                BorderBrush="#DDD"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Skip button (left) -->
                <Button
                    x:Name="SkipButton"
                    Content="[tutorialSkipButton]"
                    Width="100"
                    Height="36"
                    HorizontalAlignment="Left"
                    FontSize="13"/>

                <!-- Back and Next buttons (center) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button
                        x:Name="BackButton"
                        Content="[tutorialBackButton]"
                        Width="100"
                        Height="36"
                        Margin="0,0,10,0"
                        FontSize="13"/>
                    <Button
                        x:Name="NextButton"
                        Content="[tutorialNextButton]"
                        Width="100"
                        Height="36"
                        IsDefault="True"
                        FontSize="13"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"/>
                </StackPanel>

                <!-- Placeholder for right side (for symmetry) -->
                <StackPanel Grid.Column="2"/>
            </Grid>
        </Border>
    </Grid>
</Window>
